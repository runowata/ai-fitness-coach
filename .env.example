# Django Settings
DEBUG=False
SECRET_KEY=your-secret-key-here
ALLOWED_HOSTS=localhost,127.0.0.1,.render.com

# Database (PostgreSQL for production)
DATABASE_URL=postgresql://username:password@hostname:port/database_name

# AI Integration
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.7

# AWS S3 Storage
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=your-bucket-name
AWS_S3_REGION_NAME=eu-central-1
AWS_S3_CUSTOM_DOMAIN=your-cloudfront-domain.com

# Redis (for caching and Celery)
REDIS_URL=redis://localhost:6379/0

# Email Settings
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
EMAIL_USE_TLS=True
DEFAULT_FROM_EMAIL=AI Fitness Coach <noreply@aifitnesscoach.com>

# Application Settings
DEFAULT_USER_TIMEZONE=Europe/Zurich
MINIMUM_AGE=18

# Video Playlist Configuration
PLAYLIST_MISTAKE_PROB=0.30              # Probability of including mistake videos (0.0-1.0)
PLAYLIST_FALLBACK_MAX_CANDIDATES=20     # Max candidates per fallback level
PLAYLIST_STORAGE_RETRY=2                # Storage availability retry attempts

# AI Feature Flags
SHOW_AI_ANALYSIS=true                   # Show analysis before plan confirmation
AI_REPROMPT_MAX_ATTEMPTS=2              # Max AI reprompt attempts for validation
FALLBACK_TO_LEGACY_FLOW=false           # Use legacy AI flow without validation
STRICT_ALLOWED_ONLY=true                # Enforce exercise whitelist strictly

# Video Storage (Cloudflare R2)
R2_CDN_BASE_URL=https://cdn.example.com # Optional CDN domain for better performance
R2_SIGNED_URLS=false                    # Enable signed URLs for private buckets
R2_SIGNED_URL_TTL=3600                  # Signed URL TTL in seconds

# Metrics Collection
METRICS_BACKEND=logging                 # Options: statsd, logging, noop

# Security
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
X_FRAME_OPTIONS=DENY