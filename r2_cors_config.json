{
  "CORSRules": [
    {
      "AllowedHeaders": [
        "Range",
        "Origin",
        "Content-Type",
        "Accept",
        "Authorization"
      ],
      "AllowedMethods": [
        "GET",
        "HEAD"
      ],
      "AllowedOrigins": [
        "https://ai-fitness-coach-ttzf.onrender.com",
        "http://localhost:3000",
        "http://localhost:8000",
        "https://localhost:8000"
      ],
      "ExposeHeaders": [
        "Accept-Ranges",
        "Content-Length",
        "Content-Range",
        "Content-Type",
        "ETag",
        "Last-Modified"
      ],
